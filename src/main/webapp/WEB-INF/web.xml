<?xml version="1.0" encoding="UTF-8"?>
<web-app
        xmlns="http://xmlns.jcp.org/xml/ns/javaee"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
      http://xmlns.jcp.org/xml/ns/javaee
      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
        version="4.0">

  <!-- Welcome file -->
  <welcome-file-list>
    <welcome-file>login.jsp</welcome-file>
  </welcome-file-list>

  <!-- SignupServlet -->
  <servlet>
    <servlet-name>SignupServlet</servlet-name>
    <servlet-class>com.pharmacy.servlet.SignupServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>SignupServlet</servlet-name>
    <url-pattern>/signup</url-pattern>
  </servlet-mapping>

  <!-- LoginServlet -->
  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>com.pharmacy.servlet.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>

  <!-- MedicineServlet -->
  <servlet>
    <servlet-name>MedicineServlet</servlet-name>
    <servlet-class>com.pharmacy.servlet.MedicineServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>MedicineServlet</servlet-name>
    <url-pattern>/medicines</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>DashboardServlet</servlet-name>
    <servlet-class>com.pharmacy.servlet.DashboardServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DashboardServlet</servlet-name>
    <url-pattern>/dashboard</url-pattern>
  </servlet-mapping>

  <!-- ManageMedicineServlet -->
  <servlet>
    <servlet-name>ManageMedicineServlet</servlet-name>
    <servlet-class>com.pharmacy.servlet.ManageMedicineServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ManageMedicineServlet</servlet-name>
    <url-pattern>/manage</url-pattern>
  </servlet-mapping>

  <!-- PlaceOrderServlet -->
  <servlet>
    <servlet-name>PlaceOrderServlet</servlet-name>
    <servlet-class>com.pharmacy.servlet.PlaceOrderServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>PlaceOrderServlet</servlet-name>
    <url-pattern>/order</url-pattern>
  </servlet-mapping>

  <!-- PlaceOrderServlet -->
  <servlet>
    <servlet-name>OnlineStore</servlet-name>
    <servlet-class>com.pharmacy.servlet.OnlineStore</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>OnlineStore</servlet-name>
    <url-pattern>/store</url-pattern>
  </servlet-mapping>

  <!-- OrderConfirmationServlet -->
  <servlet>
    <servlet-name>OrderConfirmationServlet</servlet-name>
    <servlet-class>com.pharmacy.servlet.OrderConfirmationServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>OrderConfirmationServlet</servlet-name>
    <url-pattern>/orderSuccess</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>LogoutServlet</servlet-name>
    <servlet-class>com.pharmacy.servlet.LogoutServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LogoutServlet</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>
</web-app>
